{
  "hosting": {
    "public": "build",
    "appAssociation": "AUTO",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "public/*.scss"
    ],
    "predeploy": "npm --prefix web run build",
    "rewrites": [
      {
        "source": "/ref/**",
        "dynamicLinks": true
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
