{
  "hosting": {
    "public": "public",
    "appAssociation": "AUTO",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "public/index.css"
    ],
    "predeploy": "uglifycss public/index.css > public/index.min.css",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/ref/**",
        "dynamicLinks": true
      }
    ]
  }
}
